               <%= f.input :age_enfant, label: false, class: 'form-control', placeholder: 'Age des enfants' %>
           </div>
          </div>
          <div class="form-inline form-group">
            <div class="form-group">
               <%= f.input :date_arrivee, label: false, class: 'form-control', placeholder: "Date d'arrivée Ex: 12/05/2018" %>
           </div>
           <div class="form-group">
               <%= f.input :date_depart, label: false, class: 'form-control', placeholder: "Date de départ Ex: 12/05/2018" %>
           </div>
          </div>
           <div class="form-group">
               <%= f.input :email, label: false, class: 'form-control', placeholder: 'Votre adresse email (ex: albator@gmail.com)' %>
           </div>
           <div class="form-group">
               <%= f.text_area :content, class: 'form-control', rows: 10, placeholder: 'Votre message' %>
           </div>
           <div class="form-group">
               <%= f.submit "Demande de réservation", class: 'btn-primary btn-lg' %>
