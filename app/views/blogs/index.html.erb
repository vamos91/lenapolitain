<div class="container">
  <div class="">
    <% @articles.each do |article| %>
    <div class="col-xs-12 col-sm-12 col-md-4">
          <div class="thumbnail thumbnail-blog">
            <% if article.video != "" %>
              <% @v_url = article.video %>
              <% @video_id = (/([\w-]{11})/.match(@v_url)).to_s %>
              <% @embed_code = "<iframe width='100%' height='195' src='https://www.youtube.com/embed/#{@video_id}' frameborder='0' allowfullscreen></iframe>" %>
              <div class="video_blog"><%= raw(@embed_code) %></div>
            <% end %>
            <%= cl_image_tag article.image, width: "100%" %>
            <div class="caption">
              <h3 style="color: #30BCED; font-weight: bold;"><%= article.titre%></h3>
              <p class="" style="font-size: 10px; ">Ajouter le <%= article.created_at%></p>
              <% reduce_string = truncate(article.description, length: 200) %>
              <p style="font-size: 14px; color: gray;"><%= reduce_string %></p>
              <%= link_to "Lire la suite",blog_path(article), class: "btn btn-primary"%>
            </div>
          </div>
    </div>
    <% end %>
  </div>
</div>



